<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:orientation="vertical"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/alarm_item_holiday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/holiday"
        android:gravity="end"
        android:textColor="@color/font3"
        android:textSize="6pt"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_weight="1">

        <TextView
            android:id="@+id/alarm_item_AMPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 오전 "
            android:textColor="@color/font3"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/alarm_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:00"
            android:textColor="@color/font3"
            android:textSize="15pt" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/alarm_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8월 23일 (월)"
            android:textColor="@color/font3"
            android:textSize="6pt" />


        <LinearLayout
            android:id="@+id/alarm_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/alarm_item_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textColor="@color/font3"
                android:textSize="6pt" />
            <TextView
                android:id="@+id/alarm_item_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:textColor="@color/font3"
                android:textSize="6pt" />
            <TextView
                android:id="@+id/alarm_item_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화"
                android:textColor="@color/font3"
                android:textSize="6pt" />
            <TextView
                android:id="@+id/alarm_item_wen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수"
                android:textColor="@color/font3"
                android:textSize="6pt" />
            <TextView
                android:id="@+id/alarm_item_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목"
                android:textColor="@color/font3"
                android:textSize="6pt" />
            <TextView
                android:id="@+id/alarm_item_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금"
                android:textColor="@color/font3"
                android:textSize="6pt" />
            <TextView
                android:id="@+id/alarm_item_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토"
                android:textColor="@color/font3"
                android:textSize="6pt" />
        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/alarm_item_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchPadding="10dp"
            android:textColor="@color/font3" />

    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>